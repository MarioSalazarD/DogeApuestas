$(document).ready(function () {
    $("#Departamento").change(function () {
        var val = $(this).val();
        if (val == "Lima") {
            $("#Provincia").html("<option value='Lima'>Lima</option><option value='Cañete'>Cañete</option><option value='Yauyos'>Yauyos</option>");
        } else if (val == "Amazonas") {
            $("#Provincia").html("<option value='Chachapoyas'>Chachapoyas</option><option value='Utcubamba'>Ucubamba</option>");
        } else if (val == "Ayacucho") {
            $("#Provincia").html("<option value='Huanta'>Huanta</option><option value='La Mar'>La Mar</option>");
        } else if (val == "Cajamarca") {
            $("#Provincia").html("<option value='Cutervo'>Cutervo</option><option value='Santa Cruz'>Santa Cruz</option>");
        }
    });
});
$(document).ready(function () {
    $("#Provincia").change(function () {
        var val = $(this).val();
